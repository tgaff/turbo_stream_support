
<div class="min-h-screen flex justify-center items-center">
	<div class="py-12 px-12 bg-white rounded-2xl shadow-xl z-20">
    <%= form_with url: sessions_path do |f| %>
      <h1 class="text-3xl font-bold text-center mb-4 cursor-pointer">Sign in</h1>
      <div class="space-y-4">
        <div class="py-2">
          <%= f.label :name, "name:" %>
          <%= f.text_field :name, class: "block text-sm  py-3 px-4 rounded-lg w-full border outline-none " %>
        </div>
        <div class="py-2">
          <%= f.label :password, 'password:'%><br>
          <%= f.password_field :password, class: "block text-sm py-3 px-4 rounded-lg w-full border outline-none" %>
        </div>
        <%# <input type="text" placeholder="Email Addres" class="block text-sm py-3 px-4 rounded-lg w-full border outline-none" />
        <input type="text" placeholder="Password" class="block text-sm py-3 px-4 rounded-lg w-full border outline-none" /> %>
      </div>
      <div class="text-center mt-6">
        <%= f.submit "Sign in", class: "py-3 w-64 text-xl text-white bg-purple-400 rounded-2xl transition duration-500 ease-in-out hover:bg-purple-600 focus:outline-none" %>
      </div>
    <% end %>
  </div>
</div>