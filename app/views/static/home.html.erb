<div>
  <div class="h-64">
    <div class="p-4 m-4 bg-purple-600">
      <h1 class="text-2xl font-bold text-white">Wonderful Product Website</h1>
    </div>
    <div class="p-4 m-4 bg-purple-300 h-full">
      <h2 class="text-xl">Technical Support</h2>
        <p class="mt-3">We welcome you valued customer.  To consult with an expert click the button.</p>
        <% if session[:chatter_uuid].present? %>
          <p class="text-xs">(looks like you've created a chat already and can rejoin)</p>
        <% end %>
    </div>
  </div>

  <%= turbo_frame_tag 'chat_window' do %>
    <div class="fixed bottom-3 right-14 bg-purple-300 text-blue-500 flex-1 p:2 sm:p-6 justify-between flex flex-col rounded-lg hover:bg-white ">
      <%= link_to "Start or continue Chat", new_support_chat_path %>
    </div>
  <% end %>
</div>
